<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.ClientPage"
             Title="Client page">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label
            Text="Client page"
            FontSize="30"
            HorizontalOptions="Center" />
        <Label
            Text="This is the client page"
            FontSize="20"
            HorizontalOptions="Center" />

        <Label
            Text="Received message:"
            FontSize="20"
            HorizontalOptions="Center" />
        <Label
            x:Name="MessageLabel"
            FontSize="20"
            HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
